
{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.tsx", "*.ts"]
    }
  },
  "include": ["functions/**/*", "pages/**/*", "components/**/*", "lib/**/*", "types.ts", "App.tsx", "index.tsx", "constants.tsx"]
}
